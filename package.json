{
  "name": "sesame",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "start": "bun src/index.ts",
    "dev": "bun --inspect src/index.ts",
    "test:ci": "NODE_ENV=test TZ=UTC LOG_LEVEL=debug bun test --preload ./tests/setup.ts --coverage",
    "copy:env": "cp .env.example .env",
    "format": "prettier --check --ignore-path .gitignore .",
    "format:fix": "prettier --write --ignore-path .gitignore .",
    "lint": "eslint src",
    "lint:fix": "eslint --fix src",
    "gen:openapi": "openapi-typescript data/api-doc/v1.yml -o src/api/types/openapi.d.ts --empty-objects-unknown && prettier --write src/api/types/openapi.d.ts",
    "prepare": "husky install"
  },
  "dependencies": {
    "express": "4.18.2"
  },
  "devDependencies": {
    "@types/express": "4.17.21",
    "@types/supertest": "2.0.16",
    "@typescript-eslint/eslint-plugin": "6.13.2",
    "@typescript-eslint/parser": "6.13.2",
    "bun-types": "latest",
    "eslint": "8.55.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.0.1",
    "husky": "8.0.3",
    "lint-staged": "15.2.0",
    "openapi-typescript": "6.7.2",
    "prettier": "3.1.0",
    "prettier-plugin-organize-imports": "3.2.4",
    "supertest": "6.3.3"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
